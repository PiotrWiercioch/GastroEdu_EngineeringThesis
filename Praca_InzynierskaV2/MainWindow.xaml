                                <Label Grid.Row="3" Grid.Column="1" Content="JEDNOSTKA MIARY" Style="{StaticResource LabelStyleText}" Width="auto" Height="25"/>
                                <Label Grid.Row="4" Grid.Column="1" Content="DOSTAWCA" Style="{StaticResource LabelStyleText}" Width="auto" Height="25"/>
                                <Label Grid.Row="5" Grid.Column="1" Content="STAN POCZĄTKOWY" Style="{StaticResource LabelStyleText}" VerticalAlignment="Top" Width="auto" Height="25"/>

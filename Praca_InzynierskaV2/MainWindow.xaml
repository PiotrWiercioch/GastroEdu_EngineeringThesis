            <Button DockPanel.Dock="Top" Content="MAGAZYN" Style="{StaticResource MenuButton}" Click="Button_Magazyn" />
            <Button DockPanel.Dock="Top" Content="KARTOTEKI" Style="{StaticResource MenuButton}" Click="Button_Kartoteki" />
            <Button DockPanel.Dock="Top" Content="FAKTURY" Style="{StaticResource MenuButton}" Click="Button_Faktury" />
            <Button DockPanel.Dock="Top" Content="DOSTAWCY" Style="{StaticResource MenuButton}" Click="Button_Dostawcy"  />

                                <DataGridTextColumn Header="Id" Binding="{Binding id_provider}" Visibility="Collapsed"></DataGridTextColumn>
                                <DataGridTextColumn Width="130" Header="Nazwa" Binding="{Binding name_provider}"></DataGridTextColumn>
                                <DataGridTextColumn Width="110" Header="NIP" Binding="{Binding nip}"></DataGridTextColumn>
                                <DataGridTextColumn Width="110" Header="Miejscowość" Binding="{Binding city}"></DataGridTextColumn>
                                <DataGridTextColumn Width="110" Header="Ulica" Binding="{Binding street}"></DataGridTextColumn>
